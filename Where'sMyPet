<script>
    function navigateTo(pageId) {
        document.querySelectorAll('section').forEach(s => s.classList.add('hidden'));
        document.getElementById(pageId).classList.remove('hidden');
        window.scrollTo(0,0);
    }

    function saveProfile() {
        const data = {
            nombre: document.getElementById('p-nombre').value,
            edad: document.getElementById('p-edad').value,
            peso: document.getElementById('p-peso').value,
            raza: document.getElementById('p-raza').value,
            alergias: document.getElementById('p-alergias').value,
            vacunas: document.getElementById('p-vacunas').value,
            perdida: document.getElementById('p-status').checked,
            dNombre: document.getElementById('d-nombre').value,
            dTel: document.getElementById('d-tel').value,
            dWs: document.getElementById('d-ws').value,
            dEmail: document.getElementById('d-email').value
        };
        localStorage.setItem('ubipet_data', JSON.stringify(data));
        alert('Perfil guardado con √©xito');
        loadFinderData();
        navigateTo('page-finder');
    }

    function loadFinderData() {
        const data = JSON.parse(localStorage.getItem('ubipet_data'));
        if(!data) return;

        // Llenar campos Finder
        document.getElementById('f-nombre').innerText = data.nombre || 'Sin nombre';
        document.getElementById('f-edad').innerText = (data.edad || '0') + ' a√±os';
        document.getElementById('f-peso').innerText = (data.peso || '0') + ' kg';
        document.getElementById('f-raza').innerText = data.raza || '-';
        document.getElementById('f-alergias').innerText = data.alergias || 'Ninguna';
        document.getElementById('f-vacunas').innerText = data.vacunas || 'Al d√≠a';
        document.getElementById('f-d-nombre').innerText = data.dNombre;
        document.getElementById('f-d-tel').innerText = data.dTel;
        document.getElementById('f-d-ws').innerText = data.dWs;
        document.getElementById('f-d-email').innerText = data.dEmail;

        const badge = document.getElementById('status-badge');
        if(data.perdida) {
            badge.innerText = "üö® MASCOTA PERDIDA üö®";
            badge.className = "badge badge-lost";
        } else {
            badge.innerText = "üè† Mascota EN CASA";
            badge.className = "badge badge-safe";
        }
    }

    // Inicializaci√≥n
    window.onload = () => {
        const params = new URLSearchParams(window.location.search);
        if (params.get('finder') === '1') {
            loadFinderData();
            navigateTo('page-finder');
        }
    };
</script>

